includes:
    - extension.neon
    - phpstan-baseline.neon
parameters:
    level: 8
    paths:
        - src
        - tests
    excludePaths:
        - ecs.php
        - rector.php
        - '*/Fixture/*'
        - '*/Source/*'
        - src/Playground
services:
    -
        class: Symplify\PHPStanRules\Rules\ClassNameRespectsParentSuffixRule
        tags: [phpstan.rules.rule]
        arguments:
            parentClasses:
                - PHPStan\Rules\Rule
    -
        class: Symplify\PHPStanRules\Rules\SeeAnnotationToTestRule
        tags: [phpstan.rules.rule]
        arguments:
            requiredSeeTypes:
                - PHPStan\Rules\Rule
